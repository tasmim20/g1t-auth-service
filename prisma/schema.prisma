datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  RIDER
  DRIVER
  ADMIN
}

model Rider {
  id           Int           @id @default(autoincrement())
  firstName    String
  lastName     String
  email        String        @unique
  mobileNumber String        @unique
  password     String
  role         Role          @default(RIDER)
  isConfirmed  Boolean       @default(false)
  refreshTokens RefreshToken[]
  otp          String?
  otpExpiry    DateTime?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  profilePhoto String? 
}

model Driver {
  id             Int           @id @default(autoincrement())
  firstName      String
  lastName       String
  email          String        @unique
  mobileNumber   String        @unique
  password       String
  role           Role          @default(DRIVER)
  drivingLicense String        @unique
  isConfirmed    Boolean       @default(false)
  refreshTokens RefreshToken[]
  otp            String?
  otpExpiry      DateTime?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime      @updatedAt
  profilePhoto String? 
}

model Admin {
  id            Int             @id @default(autoincrement())
  name          String
  email         String          @unique
  password      String
  role          Role            @default(ADMIN)
  refreshTokens RefreshToken[]
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  profilePhoto String? 
}
model RefreshToken {
  id         Int       @id @default(autoincrement())
  token      String    @unique
  riderId     Int?
  driverId   Int?
  adminId    Int?
  isUsed     Boolean   @default(false)
  isRevoked  Boolean   @default(false)
  createdAt  DateTime  @default(now())
  expiresAt  DateTime
  rider      Rider?     @relation(fields: [riderId], references: [id])
  driver     Driver?   @relation(fields: [driverId], references: [id])
  admin      Admin?    @relation(fields: [adminId], references: [id])
}

model Otp {
  id           Int      @id @default(autoincrement())
  emailOrPhone String
  otp          String
  expiresAt    DateTime
  isUsed       Boolean  @default(false)
  createdAt    DateTime @default(now())
}
